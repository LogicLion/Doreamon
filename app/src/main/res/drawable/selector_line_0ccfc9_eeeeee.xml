<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <layer-list>
            <item
                android:bottom="0dp"
                android:left="-2dp"
                android:right="-2dp"
                android:top="-2dp">
                <shape>
                    <solid android:color="@color/transparent" />
                    <stroke android:width="1dp" android:color="@color/color_green_0ccfc9"/>
                </shape>

            </item>
        </layer-list>
    </item>

    <item android:state_focused="false">
        <layer-list>
            <item
                android:bottom="0dp"
                android:left="-2dp"
                android:right="-2dp"
                android:top="-2dp">
                <shape>
                    <solid android:color="@color/transparent" />
                    <stroke android:width="1dp" android:color="@color/color_gray_eeeeee"/>
                </shape>

            </item>
        </layer-list>
    </item>

</selector>