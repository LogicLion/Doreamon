<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RoundProgressView">
        <attr name="progress_bar_color" format="color"/>
        <attr name="progress_background_color" format="color"/>
        <attr name="progress_total" format="integer"/>
        <attr name="progress" format="integer"/>
        <attr name="round_corner_radius" format="dimension"/>

        <attr name="progress_bar_orientation">
            <!-- Defines an horizontal widget. -->
            <enum name="horizontal" value="0" />
            <!-- Defines a vertical widget. -->
            <enum name="vertical" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="IndicatorView">
        <attr name="indicator_selected_color" format="color"/>
        <attr name="indicator_unselected_color" format="color"/>
        <attr name="indicator_sum" format="integer"/>
        <attr name="indicator_select_index" format="integer"/>
        <attr name="indicator_selected_width" format="dimension"/>
        <attr name="indicator_selected_height" format="dimension"/>
        <attr name="indicator_selected_radius" format="dimension"/>

        <attr name="indicator_unselected_width" format="dimension"/>
        <attr name="indicator_unselected_height" format="dimension"/>
        <attr name="indicator_unselected_radius" format="dimension"/>
        <attr name="indicator_padding" format="dimension"/>

    </declare-styleable>
</resources>