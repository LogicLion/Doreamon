<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RoundProgressView">
        <attr name="progress_bar_color" format="color"/>
        <attr name="progress_background_color" format="color"/>
        <attr name="progress_total" format="integer"/>
        <attr name="progress" format="integer"/>
        <attr name="round_corner_radius" format="dimension"/>

        <attr name="progress_bar_orientation">
            <!-- Defines an horizontal widget. -->
            <enum name="horizontal" value="0" />
            <!-- Defines a vertical widget. -->
            <enum name="vertical" value="1" />
        </attr>
    </declare-styleable>
</resources>