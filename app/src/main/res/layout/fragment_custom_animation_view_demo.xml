<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.doreamon.widget.CustomChoreographerAnimationView
            android:id="@+id/choreographer_animation_view"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="@id/choreographer_animation_view"
            app:layout_constraintBottom_toBottomOf="@id/choreographer_animation_view"
            app:layout_constraintStart_toStartOf="@id/choreographer_animation_view"
            app:layout_constraintEnd_toEndOf="@id/choreographer_animation_view"/>


        <TextView
            android:id="@+id/tv_start_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始"
            android:textSize="18sp"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            android:stateListAnimator="@animator/btn_press_animator"
            android:background="@drawable/selector_primary_eeeeee_radius_10"
            app:layout_constraintTop_toTopOf="@id/choreographer_animation_view"
            app:layout_constraintBottom_toTopOf="@id/tv_stop_1"
            app:layout_constraintStart_toEndOf="@id/choreographer_animation_view"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_stop_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="停止"
            android:textSize="18sp"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            android:stateListAnimator="@animator/btn_press_animator"
            android:background="@drawable/selector_primary_eeeeee_radius_10"
            app:layout_constraintTop_toBottomOf="@id/tv_start_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/choreographer_animation_view"
            app:layout_constraintStart_toEndOf="@id/choreographer_animation_view" />




        <com.example.doreamon.widget.StarPathView
            android:id="@+id/star_path_view"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:layout_constraintTop_toBottomOf="@id/choreographer_animation_view"
            app:layout_constraintStart_toStartOf="parent"/>


        <TextView
            android:id="@+id/tv_start_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始"
            android:textSize="18sp"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            android:stateListAnimator="@animator/btn_press_animator"
            android:background="@drawable/selector_primary_eeeeee_radius_10"
            app:layout_constraintTop_toTopOf="@id/star_path_view"
            app:layout_constraintBottom_toTopOf="@id/tv_stop_2"
            app:layout_constraintStart_toEndOf="@id/star_path_view"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_stop_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="停止"
            android:textSize="18sp"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            android:stateListAnimator="@animator/btn_press_animator"
            android:background="@drawable/selector_primary_eeeeee_radius_10"
            app:layout_constraintTop_toBottomOf="@id/tv_start_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/star_path_view"
            app:layout_constraintStart_toEndOf="@id/star_path_view" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>