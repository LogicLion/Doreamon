<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_badge"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    
    <TextView
        android:id="@+id/tv_badge_tip"
        android:layout_width="41dp"
        android:layout_height="24dp"
        android:text="详情"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:background="@drawable/icon_badge_date_tip"
        app:layout_constraintStart_toStartOf="@id/iv_badge"
        app:layout_constraintEnd_toEndOf="@id/iv_badge"
        app:layout_constraintBottom_toTopOf="@id/iv_badge"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_date"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:background="@drawable/shape_fff8ed_stroke_ffdca8">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="#E59A2B"
            android:textSize="10sp"
            android:text="获得日期："/>

        <TextView
            android:id="@+id/tv_badge_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="3dp"
            android:textColor="#E59A2B"
            android:textSize="10sp"
            android:text="2024/10/01"/>

        <TextView
            android:id="@+id/tv_toggle"
            android:layout_width="50dp"
            android:layout_height="17dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:textSize="11sp"
            android:text="翻面"
            android:textColor="@color/white"
            android:background="@drawable/shape_ffaa2c_r8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_badge_date"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>