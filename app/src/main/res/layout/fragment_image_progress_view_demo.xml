<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <com.example.doreamon.widget.FrogProgressView
            android:id="@+id/frog_progress"
            android:layout_width="match_parent"
            android:layout_height="30dp" />


        <TextView
            android:id="@+id/tv_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/black"/>


        <TextView
            android:id="@+id/tv_update_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@color/color_black_333333"
            android:padding="20dp"
            android:text="刷新进度"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/progress_view" />

        <com.example.doreamon.widget.NiuTouRenSeekBar
            android:id="@+id/niu_seek_bar"
            android:layout_width="250dp"
            android:layout_height="90dp"
            android:layout_marginTop="30dp"
            />

        <com.example.doreamon.widget.DraggableProgressBar
            android:id="@+id/drag_progress_bar"
            android:layout_width="250dp"
            android:layout_height="20dp"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_update_progress" />

        <com.example.doreamon.widget.ImageProgressView
            android:id="@+id/progress_view"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_margin="20dp"
            app:layout_constraintTop_toTopOf="parent" />


        <com.example.doreamon.widget.LevelStarView
            android:layout_width="wrap_content"
            android:layout_height="11dp" />


        
        <com.example.doreamon.widget.CustomTargetProgressView
            android:id="@+id/target_progress_bar"
            android:layout_width="127dp"
            android:layout_height="11dp"
            android:layout_marginTop="20dp"/>

        <com.example.doreamon.widget.CustomTargetPieView
            android:id="@+id/target_pie_view"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"/>



    </LinearLayout>

    <data>

    </data>
</layout>