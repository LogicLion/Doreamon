<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_update_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/color_black_333333"
            android:padding="20dp"
            android:text="刷新进度"
            android:textSize="15sp"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/progress_view" />

        <com.example.doreamon.widget.ImageProgressView
            android:id="@+id/progress_view"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_margin="20dp"
            app:layout_constraintTop_toTopOf="parent" />

        <com.example.doreamon.widget.DraggableProgressBar
            android:id="@+id/drag_progress_bar"
            android:layout_width="250dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@id/tv_update_progress"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <data>

    </data>
</layout>